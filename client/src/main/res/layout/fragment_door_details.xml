<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.gombi.door.client.DoorDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAlignment="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doorImageView"
            android:minWidth="200dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:minHeight="200dp"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/doorDetailsDisplayNameTextView"
            android:layout_gravity="center_horizontal"
            android:text="Door Display Name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owned by Robert"
            android:id="@+id/ownerTextView"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="false"
            android:textAlignment="center"
            android:textIsSelectable="false"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openDoor"
            android:id="@+id/openDoorButton"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:singleLine="false"
            android:enabled="false"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/makeDefault"
            android:id="@+id/makeDefaultButton"
            android:layout_gravity="center_horizontal"
            android:height="0dp"
            android:layout_margin="10dp"
            android:enabled="false"/>
    </LinearLayout>

</FrameLayout>
